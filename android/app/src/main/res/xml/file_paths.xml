<?xml version="1.0" encoding="utf-8"?>
<!-- 
  File: android/app/src/main/res/xml/file_paths.xml
  Description: File provider paths untuk Image Picker & Camera
-->
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External Files Path - untuk gambar dari gallery -->
    <external-files-path name="images" path="Pictures" />
    <external-files-path name="external" path="." />
    
    <!-- External Path - akses ke storage eksternal -->
    <external-path name="external_files" path="."/>
    
    <!-- Cache Path - untuk camera dan temporary files -->
    <cache-path name="camera_cache" path="." />
    <cache-path name="cache" path="." />
    
    <!-- External Cache Path - cache di storage eksternal -->
    <external-cache-path name="external_cache" path="." />
    
    <!-- Files Path - internal app files -->
    <files-path name="files" path="." />
</paths>
